<div id="chartArea">

    <div class="displayInline">
        <div class="chartTopRow">
            <h1>Natural Gas Usage - Engineering & Industry Building</h1>
            <div id="sensorDataBtns">
                <button class="sensorNavBtn current" data-graph-data="Amount" data-graph-title="Usage">Usage<br />(CCF)</button>
                <button class="sensorNavBtn" data-graph-data="Change" data-graph-title="Demand">Demand<br />(CCF/H)</button>
            </div>
        </div>
    </div>

    <div class="chartMiddleRow">
        <div class="chartScrollBtns">
            <button id="chartScrollLeftBtn" class="sensorNavBtn"><img src="~/images/angleLeft.png" /></button>
        </div>

        <div id="graphContainer">
            <canvas id="sensorChartHere"></canvas>
        </div>
        <div class="chartScrollBtns">
            <button id="chartScrollRightBtn" class="sensorNavBtn"><img src="~/images/angleRight.png" /></button>
        </div>
    </div>

    <div id="chartScaleBtns">
        <button class="sensorNavBtn current" data-graph-scale="All" data-graph-title="All">15min</button>
        <button class="sensorNavBtn" data-graph-scale="Hour" data-graph-title="Hourly">Hour</button>
        <button class="sensorNavBtn" data-graph-scale="Day" data-graph-title="Daily">Day</button>
        <button class="sensorNavBtn" data-graph-scale="Month" data-graph-title="Monthly">Month</button>
        <button class="sensorNavBtn" data-graph-scale="Year" data-graph-title="Yearly">Year</button>
    </div>
    <div id="chartData" data-graph-sensor="NaturalGas" data-graph-ticks="20" data-graph-end="@DateTime.Now" data-graph-scale="All" data-graph-data="Amount" data-graph-building="Engineering & Industry Building"></div>
    <div id="chartProperties" data-chart-prop='{
                                                    "chartType": "line",
                                                    "datasetLabel": "Natural Gas Usage",
                                                    "backgroundColor": "rgba(255,0,0,.7)",
                                                    "borderColor": "rgba(255,0,0,1)",
                                                    "labelString": "CCF",
                                                    "xAxis": [],
                                                    "yAxis": [],
                                                    "globalChart": null
                                                }'></div>
</div>
