    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style> 
        .textMain {
            font-family: Sans-serif;
            font-size:x-large;
        }
        .textInstructionHead {
            font-family: Sans-serif;
            font-size: x-large;
            color: #ffffff;
            padding: 10px 10px 10px 10px;
        }
        .textInstructionBody {
            font-family: Sans-serif;
            font-size: large;
            color: #ffffff;
            padding: 10px 10px 10px 10px;
        }
        .square {
            width: auto;
            height: 300px;
            border: 5px solid #FFC425;
            border-radius: 25px;
            background: #00583D;
            outline-width: 5px;            
        }
